{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": false,
      "jsx": "preserve",
      "baseUrl": "./src"
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "**/*.js",
      "**/*.ts",
      "**/*.tsx"
    ]
  }
  